@model MealManualDetailViewModel
@{
    ViewData["Title"] = @Localizer["Detail Meal Menual"]; //"식수 수기 상세";
}
<script>
    function goList(){
        window.location = '/meal/manuallist/?culture=@CultureInfo.CurrentCulture'
    }
</script>

<div class="tit-header-wrap">
    <div class="rtit">@Localizer["Contact Information"]</div>
</div>
<div class="reg-form-wrap">
    <ul>
        <li>
            <div class="label s03">@Localizer["Contact Information"]</div>
            <div class="form-item-wrap">
                @* Sabun	OrgID	OrgNameKor	OrgNameEng *@
                <input type="text" class="inp" name="Name" value='@Model.MealLog.Name' readonly />
                @{
                    if(CultureInfo.CurrentCulture.ToString().Equals("en")){
                        <input type="text" class="inp" name="OrgNameEng" value='@Model.MealLog.OrgNameEng' readonly />
                    }else{
                        <input type="text" class="inp" name="OrgNameKor" value='@Model.MealLog.OrgNameKor' readonly />
                    }
                }
            </div>
        </li>
        <li>
            <div class="label s03">@Localizer["Registration Classify"]</div>
            <div class="form-item-wrap">
                @{
                    if(CultureInfo.CurrentCulture.ToString().Equals("en")){
                        <select class="select" name="IsVisitor" asp-items='@(new SelectList(Model.CodeVisitorType, nameof(CommonCode.SubCodeID), nameof(CommonCode.CodeNameEng), Model.MealLog.IsVisitor))' disabled></select>
                    }else{
                        <select class="select" name="IsVisitor" asp-items='@(new SelectList(Model.CodeVisitorType, nameof(CommonCode.SubCodeID), nameof(CommonCode.CodeNameKor), Model.MealLog.IsVisitor))' disabled></select>
                    }
                }
            </div>
        </li>
    </ul>
</div>
<div class="tit-header-wrap">
    <div class="rtit">@Localizer["Meal Information"]</div>
</div>
<div class="reg-form-wrap">
    <ul>
        <li>
            <div class="label s03">@Localizer["Place Of Business"]</div>
            <div class="form-item-wrap">
                @{
                    if(CultureInfo.CurrentCulture.ToString().Equals("en")){
                        <select class="select" name="Location" asp-items='@(new SelectList(Model.CodeLocation, nameof(CommonCode.SubCodeDesc), nameof(CommonCode.CodeNameEng), Model.MealLog.Location))' disabled></select>
                    }else{
                        <select class="select" name="Location" asp-items='@(new SelectList(Model.CodeLocation, nameof(CommonCode.SubCodeDesc), nameof(CommonCode.CodeNameKor), Model.MealLog.Location))' disabled></select>
                    }
                }
            </div>
        </li>
        <li>
            <div class="label s03">@Localizer["Meal Classify"]</div>
            <div class="form-item-wrap">
                @{
                    if(CultureInfo.CurrentCulture.ToString().Equals("en")){
                        <select class="select" name="MealGB" asp-items='@(new SelectList(Model.CodeMealType, nameof(CommonCode.SubCodeID), nameof(CommonCode.CodeNameEng), Model.MealLog.MealGB))' disabled></select>
                    }else{
                        <select class="select" name="MealGB" asp-items='@(new SelectList(Model.CodeMealType, nameof(CommonCode.SubCodeID), nameof(CommonCode.CodeNameKor), Model.MealLog.MealGB))' disabled></select>
                    }
                }
            </div>
        </li>
    </ul>
</div>
<div class="tit-header-wrap">
    <div class="rtit">@Localizer["Eat Person Information"]</div>
</div>
<div class="reg-form-wrap">
    <ul>
        <li>
            <div class="label s03">@Localizer["Name"]</div>
            <div class="form-item-wrap">
                <input type="text" class="inp" placeholder='@Localizer["Name"]' name="VisitantName" value='@Model.MealLog.VisitantName' readonly />                
            </div>
        </li>
        <li>
            <div class="label s03">@Localizer["Company Name"]</div>
            <div class="form-item-wrap"> 
                <input type="text" class="inp" placeholder='@Localizer["Company Name"]' name="VisitantCompany" value='@Model.MealLog.VisitantCompany' readonly />
            </div>
        </li>
        <li>
            <div class="label s03">@Localizer["Position"]</div>
            <div class="form-item-wrap">
                <input type="text" class="inp" placeholder='@Localizer["Position"]' name="VisitantGrade" value='@Model.MealLog.VisitantGrade' readonly />
            </div>
        </li>
        <li>
            <div class="label s03">@Localizer["Etc"]</div>
            <div class="form-item-wrap">
                <input type="text" class="inp" placeholder='@Localizer["Etc"]' name="Comment" value='@Model.MealLog.Comment' readonly />                
            </div>
        </li>
    </ul>
</div>
<div class="req-btn-wrap">
    @* 2023.09.21 신인아 버튼정리 start~end
    <div class="lt-item">
    </div>*@
    <div class="lt-item">
        <button type="button" class="btn-gray" onClick="goList();">@Localizer["Confirm"]</button>
    </div>
</div>
